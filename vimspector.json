{
	"configurations": {
		"python:launch": {
			"adapter": "debugpy",
			"configuration": {
				"name": "Python: Launch",
				"type": "python",
				"request": "launch",
				"python": "/usr/bin/python",
				"stopOnEntry": true,
				"console": "externalTerminal",
				"externalConsole": true,
				"debugOptions": [],
				"program": "${file}",
				"justMyCode": true,
				"breakpoints": {
					"exception": {
						"raised": "N",
						"uncaught": "",
						"userUnhandled": ""
					}
				}
			}
		},
		"python:attach": {
			"adapter": "multi-session",
			"configuration": {
				"name": "Python: Launch",
				"type": "python",
				"request": "attach",
				"python": "/usr/bin/python",
				"stopOnEntry": true,
				"console": "externalTerminal",
				"externalConsole": true,
				"debugOptions": [],
				"program": "${file}",
				"justMyCode": true,
				"breakpoints": {
					"exception": {
						"raised": "N",
						"uncaught": "",
						"userUnhandled": ""
					}
				},
				"pathMappings": [
					{
						"localRoot": "${cwd}",
						"remoteRoot": "G:/Projects/GitLab/language_learnning"
					}
				]
			}
		}
	}
}
